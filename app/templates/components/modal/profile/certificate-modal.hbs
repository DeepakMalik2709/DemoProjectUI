{{#modal/custom-modal title="Certificate" modal-id=(concat 'certificate-' data.certificateId) item=data save="update"}}
    <div class="form-group has-feedback has-success {{if data.isEmptyName 'has-error' 'has-success'}}">
      <label class="control-label col-sm-3" for="inputName-{{data.certificateId}}">Name *</label>
      <div class="col-sm-8">
        {{input type="text" value=data.name class="form-control" id=(concat 'inputName-' data.certificateId) aria-describedby=(concat 'inputNameStatus-' data.certificateId)}}
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
        <span id="inputNameStatus-{{data.certificateId}}" class="sr-only">(success)</span>
      </div>
    </div>
    <div class="form-group has-feedback has-success">
      <label class="control-label col-sm-3" for="inputDate-{{data.certificateId}}">Date</label>
      <div class="col-sm-8">
        {{input type="text" value=data.date class="form-control" id=(concat 'inputDate-' data.certificateId)}}
      </div>
    </div>
    <div class="form-group has-feedback has-success">
      <label class="control-label col-sm-3" for="inputOrganisation-{{data.certificateId}}">Organisation</label>
      <div class="col-sm-8">
        {{input type="text" value=data.organisation class="form-control" id=(concat 'inputOrganisation-' data.certificateId)}}
      </div>
    </div>
    <div class="form-group has-feedback has-success">
      <label class="control-label col-sm-3" for="inputGrade-{{data.certificateId}}">Grade</label>
      <div class="col-sm-8">
        {{input type="text" value=data.grade class="form-control" id=(concat 'inputGrade-' data.certificateId)}}
      </div>
    </div>
{{/modal/custom-modal}}