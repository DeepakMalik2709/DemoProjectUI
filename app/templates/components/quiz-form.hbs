<form role="form">
    <div class="box-body">
        <div class="form-group">
            {{input type="text" value=quiz.name class="form-control" placeholder="Quiz  name" }}
        </div>
        <div class="form-group">
            {{input type="text" value=quiz.subject class="form-control" placeholder="Quiz  Subject" }}
        </div>
        <div class="form-group">
            {{input type="text" value=quiz.marks class="form-control" placeholder="Quiz  marks" }}
        </div>
        <div class="form-group">
            {{input type="text" value=quiz.passingRules class="form-control" placeholder="Quiz  passingRules" }}
        </div>
        <div class="form-group">
                <label for="exampleInputFile">Quiz desc</label> <small>Write something about quiz</small>
              {{textarea type="text" value=quiz.description class="form-control" placeholder="Description"}}
        </div>
        {{#if  quiz.withTime}}
            <button  class="btn btn-info" {{action 'includeTimeLine' quiz}}>without time</button>
      {{else}}

            <button  class="btn btn-info" {{action 'includeTimeLine' quiz}}>with time</button>
        {{/if}}
        {{#if quiz.withTime}}
            {{task-item-deadline item=quiz title="Quiz Start Time" fieldName='fromDateTime' }}
            {{task-item-deadline item=quiz title="Quiz End Time" fieldName='toDateTime' }}
        {{/if}}

      <div class="form-group mtop10" >
        {{#power-select selected=quiz.shareWith options=myShareWith  placeholder="Share quiz with"
             onchange=(action  "shareWithSet")  as |share| }}
               {{share}}                          {{/power-select}}
      </div>

      {{#if  shareWithGroup}}
        <div class="form-group mtop10" >
            {{#power-select-multiple selected=selectedGroups options=myGroups  placeholder="Please, select Group"
              onchange=(action (mut selectedGroups))  as |attendees| }}
                {{attendees.name}}                          {{/power-select-multiple}}
        </div>
    {{/if}}

    <div class="form-group mtop10" >
      {{#power-select-multiple selected=selectedques options=myQuestions  placeholder="Please, select question"
           onchange=(action (mut selectedques))  as |ques| }}
             {{ques.title}}                          {{/power-select-multiple}}
   </div>

      <div class="box-footer">
          <button type="submit"  class="btn btn-primary" {{action 'saveQuiz' quiz selectedGroups selectedques}} >save</button>
         <button  class="btn btn-default" {{action 'cancelClicked'}}>Cancel</button>
      </div>
   </div><!-- /.box-body -->
</form>
