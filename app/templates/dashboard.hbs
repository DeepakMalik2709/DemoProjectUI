<div class="row">

	<section class="col-lg-6 col-xs-12 connectedSortable">
		<div class="box box-primary">
              <div class="box-header" style="cursor: move; padding: 0px">
                 <!-- tools box -->
                 <div class="pull-right box-tools">
                 </div><!-- /. tools -->

                 <i class="fa fa-tasks"></i>
                 <h3 class="box-title">
                     Monthly Task ({{model.taskListCount}})
                 </h3>
             </div>
             <div class="box-body no-padding">
                 <div class="table-responsive">
                     <!-- .table - Uses sparkline charts-->
                     <table class="table table-striped">
                         <tbody><tr>
                             <th>Title</th>
                             <th>Group</th>
                             <th>Deadline</th>
                             <th>Submission</th>
                         </tr>
                         {{#each model.taskList as |task|}}
                         <tr>
                             <td>
                               {{#link-to "group.post" task.id}}
     	                      	   {{task.title}}
     	                         {{/link-to}}
                             </td>
                             <td>{{task.groupName}}</td>
                             <td>{{task.deadlineTimeString}}</td>
                             <td>
                               {{#if task.isSubmitted}}
                                 <span class="label label-success">
                                   Done
                                 </span>
                               {{else}}
                                 <span class="label label-warning">
                                   Pending
                                 </span>
                               {{/if}}
                             </td>
                         </tr>
                         {{else}}
                             <span class="label label-primary" style="font-size: 12px; margin-left : 5px">
                               No task available for this month.
                             </span>
            						 {{/each}}

                     </tbody></table><!-- /.table -->
                 </div>
             </div><!-- /.box-body-->
         </div>
    </section>

    <section class="col-lg-6 col-xs-12 connectedSortable">
